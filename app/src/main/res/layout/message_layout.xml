<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/messageContainer2"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="AB" />

    <TextView
        android:id="@+id/name"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/messageContainer2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Username" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/messageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cornerRadius="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/messageContainer2"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="This is a message that can be very long and should wrap." />

    <TextView
        android:id="@+id/date"
        android:textColor="@color/white"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/messageContainer"
        app:layout_constraintTop_toBottomOf="@id/messageContainer"
        tools:text="12:34" />
</androidx.constraintlayout.widget.ConstraintLayout>